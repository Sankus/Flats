@model IEnumerable<Flats.Views.Manage.LiveConditions>

@{
    ViewBag.Title = "Список вариантов жизненных условий";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Список вариантов жизненных условий</h2>

<p>
    @Html.ActionLink("Создать условие", "CreateLiveCondition")
</p>
<table class="table">
    <tr>
        <th>
            Наименование
        </th>
        <th>
            Описание
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.lc_key)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lc_value)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "EditLiveCondition", new { id = item.id }) |
            @Html.ActionLink("Удалить", "DeleteLiveCondition", new { id = item.id })
        </td>
    </tr>
}

</table>
