@model Flats.Views.Manage.Attributes

@{
    ViewBag.Title = "EditAttribute";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditAttribute</h2>

@using (Html.BeginForm("EditAttribute", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Attributes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.attr_key, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.attr_key, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.attr_key, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Naim">Картинка</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="picture" name="picture" type="file" value="@ViewBag.pic">
            </div>
            <label class="control-label col-md-2" for="Naim"></label>
            <div class="col-md-10">
                <img src="@ViewBag.pic">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
