@model IEnumerable<Flats.Views.Manage.languages>

@{
    ViewBag.Title = "Список языков";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить", "CreateLanguage")
</p>
<table class="table">
    <tr>
        <th>
           Язык 
        </th>
        <th>
            Код языка
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.short_code)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "EditLanguage", new { id = item.id }) |
            @Html.ActionLink("Удалить", "DeleteLanguage", new { id = item.id })
        </td>
    </tr>
}

</table>
