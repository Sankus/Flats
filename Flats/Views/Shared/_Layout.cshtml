</ul>
                <div class="searchbox">
                   Select_1
                </div>
            </div>
       
            

         </div>
       
    </div>
    <div class="left-plashka">
    Custom test
    </div>
    <div class="inneer-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – Спасибо</p>
        </footer>
    </div>

    
    @Scripts.Render("~/bundles/bootstrap")
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery.slides.min.js"></script>
    <script>
        $(function () {
            $('#slides').slidesjs({
                width: 940,
                height: 528,
                play: {
                    active: true,
                    auto: true,
                    interval: 4000,
                    swap: true
                }
            });
        });
    </script>
    
    <script>
        $(document).ready(function () {
            $("a.hide-show").click(function () {
                $(".searchbox").toggle(100);
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
